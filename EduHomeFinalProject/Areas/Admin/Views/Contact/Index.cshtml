@model Contact
<div class="row col-lg-10">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Contact</h4>
                @if (Model == null)
                {
                        <a class="btn btn-primary" asp-controller="contact" asp-action="create">Create</a>
                }
                else
                {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Message</th>
                                        <th>Address</th>
                                        <th>Number</th>
                                        <th>Website</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@(Model.Message?.Length > 50 ? Model.Message.Substring(0, 50) : Model.Message)</td>
                                        <td style="width:200px">
                                        @Model.Address 
                                          
                                        </td>
                                        <td>
                                        @Model.ContactNumber
                                        </td>
                                        <td>
                                        @Model.Website
                                        </td>

                                        <td>
                                            <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Update</a>
                                            <div style="display:inline-block">
                                                <form class="forms-sample" method="post" asp-action="Delete" asp-route-id="@Model.Id">
                                                    <button type="submit" class="btn btn-danger mr-2">Delete</button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                }
            </div>
        </div>
    </div>
</div>