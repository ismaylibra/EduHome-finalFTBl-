@model FooterUsefulLinks

<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Footer Information</h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th>Title</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>

                                <td>@Model.Title</td>


                                <td>

                                    <a class="btn btn-success" asp-action="update" asp-route-id="@Model.Id">Update</a>
                                </td>

                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>