@model AboutPage

<div class="row col-lg-12">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Footer Logo Content</h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <img style="border-radius:0px; object-fit:contain; height:100px; width:100px;" src="~/assets/img/footer/@Model.ImageUrl" alt="image">
                                </td>

                                <td>@Model.Description</td>


                                <td>

                                    <a class="btn btn-success" asp-action="update" asp-route-id="@Model.Id">Update</a>
                                </td>

                            </tr>


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>