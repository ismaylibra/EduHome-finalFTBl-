@model SlideImageUpdateViewModel

<div class="row col-lg-12">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Category</h4>

                <form class="forms-sample" method="post" asp-action="update" enctype="multipart/form-data" en>
                    <div class="form-group">
                        <label asp-for="Image">Name</label>
                        <input asp-for="Image" class="form-control" placeholder="Name">
                        <span asp-validation-for="Image" class="text-danger"></span>
                        
                    </div>
                    <div class="imagesTable">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Image</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>

                                    <td>
                                        <img class="productImage " src="~/assets/img/slider/@Model.ImageUrl" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger removeProductImage">Delete</button>
                                    </td>

                                </tr>


                            </tbody>
                        </table>

                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Subtitle">Subtitle</label>
                        <input asp-for="Subtitle" class="form-control" placeholder="Subtitle">
                        <span asp-validation-for="Subtitle" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ButtonContent">ButtonContent</label>
                        <input asp-for="ButtonContent" class="form-control" placeholder="ButtonContent">
                        <span asp-validation-for="ButtonContent" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ButtonLink">ButtonLink</label>
                        <input asp-for="ButtonLink" class="form-control" placeholder="ButtonLink">
                        <span asp-validation-for="ButtonLink" class="text-danger"></span>

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>