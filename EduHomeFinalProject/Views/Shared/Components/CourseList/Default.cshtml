@{
    List<Course> Courses = Model;
}



    @foreach (var course in Courses)
    {
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-course mb-70">
            <div class="course-img">
                <a asp-controller="course" asp-action="details" asp-route-id="@course.Id">
                    <img src="~/assets/img/course/@course.ImageUrl" style="width:370px; height:250px;" alt="course">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
            </div>
            <div class="course-content">
                <h3><a asp-controller="course" asp-action="details" asp-route-id="@course.Id">@course.Title</a></h3>
                @{
                    string about = (course.About.Length < 20) ? course.About : course.About.Substring(0, 20) + "...";
                }
                <p>@about</p>
                <a class="default-btn" asp-controller="course" asp-action="details" asp-route-id="@course.Id">read more</a>
            </div>
        </div>
    </div>
}